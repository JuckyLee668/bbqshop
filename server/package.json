{
  "name": "noodles-api",
  "version": "1.0.0",
  "description": "手工烤面筋小程序后端API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:restart": "pm2 restart ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "init:merchant": "node scripts/init-merchant.js",
    "init:merchant:custom": "node scripts/init-merchant-custom.js",
    "init:data": "node scripts/init-data.js",
    "init:full": "node scripts/init-full-data.js",
    "fix:user-index": "node scripts/fix-user-index.js",
    "fix:cart-index": "node scripts/fix-cart-index.js"
  },
  "keywords": ["miniprogram", "api", "express", "mongodb"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
