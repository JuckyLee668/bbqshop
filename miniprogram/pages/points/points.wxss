.points-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 积分头部 */
.points-header {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  padding: 48rpx 32rpx;
  color: #fff;
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.points-value {
  font-size: 64rpx;
  font-weight: bold;
}

/* 商品区域 */
.products-section {
  padding: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.products-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.product-item {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.product-image-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
}

.product-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.exchange-count {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.count-text {
  font-size: 24rpx;
  color: #999;
}

.product-points {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.points-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
}

.points-unit {
  font-size: 24rpx;
  color: #999;
}
