.cart-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.cart-header {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  font-size: 28rpx;
  color: #666;
}

/* 购物车列表 */
.cart-scroll {
  flex: 1;
  height: calc(100vh - 200rpx);
}

.cart-list {
  padding: 32rpx;
}

.cart-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
}

.item-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

.delete-btn {
  padding: 8rpx;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-content {
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #666;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.total-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.total-label {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
}

.total-price-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.delivery-fee-text {
  font-size: 20rpx;
  color: #999;
}

/* 配送方式选择 */
.delivery-section {
  background: #f5f5f5;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.delivery-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.delivery-options {
  display: flex;
  gap: 24rpx;
}

.delivery-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fff;
  transition: all 0.3s;
}

.delivery-option.active {
  border-color: #FF6B35;
  background: #fff5f0;
}

.delivery-option-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.delivery-option.active .delivery-option-title {
  color: #FF6B35;
  font-weight: 600;
}

.delivery-fee-tip {
  font-size: 20rpx;
  color: #999;
  line-height: 1.4;
  min-height: 28rpx;
  display: block;
}

.delivery-option.active .delivery-fee-tip {
  color: #FF6B35;
  font-weight: 600;
}

.delivery-fee-tip-placeholder {
  font-size: 20rpx;
  line-height: 1.4;
  min-height: 28rpx;
  display: block;
  visibility: hidden;
}
