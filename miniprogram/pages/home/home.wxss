.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 导航栏 */
.navbar {
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.logo {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.navbar-right {
  display: flex;
  align-items: center;
}

.notification-icon-wrapper {
  position: relative;
  display: inline-block;
}

/* 右上角徽标 */
.notification-badge {
  position: absolute;
  top: -6px;
  right: -6px;
  background-color: #f5222d; /* 醒目的红色 */
  color: white;
  font-size: 12px;
  min-width: 16px;
  height: 16px;
  border-radius: 8px; /* 圆形 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 3px;
  box-sizing: border-box;
  line-height: 1;
  font-weight: bold;
  z-index: 10;
}

/* 门店信息横幅 */
.store-banner {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  padding: 48rpx 32rpx;
  color: #fff;
}

.store-info {
  width: 100%;
}

.store-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.store-name-wrapper {
  flex: 1;
}

.store-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.store-address {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.store-meta {
  display: flex;
  align-items: center;
  gap: 48rpx;
  font-size: 28rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 区块 */
.section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #FF6B35;
}

/* 今日推荐 */
.recommend-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recommend-image-wrapper {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.recommend-image {
  width: 100%;
  height: 100%;
  height: 384rpx;
  background: linear-gradient(135deg, #FED7AA 0%, #FB923C 100%);
  position: relative;
}

.recommend-content {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  color: #fff;
}

.recommend-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.recommend-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.recommend-price {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-current {
  font-size: 48rpx;
  font-weight: bold;
}

.price-old {
  font-size: 28rpx;
  opacity: 0.7;
  text-decoration: line-through;
}

/* 商品卡片 */
.product-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 8rpx;
}

.product-image-wrapper {
  position: relative;
  height: 256rpx;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.favorite-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-info {
  padding: 24rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.product-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  background: #FF6B35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 新用户专享 */
.new-user-banner {
  background: linear-gradient(135deg, #EC4899 0%, #EF4444 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}

.new-user-content {
  flex: 1;
}

.new-user-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.new-user-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 可领取优惠券 */
.coupon-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
}

.coupon-item {
  display: inline-block;
  width: 600rpx;
  margin-right: 24rpx;
  vertical-align: top;
}

.coupon-item:last-child {
  margin-right: 0;
}

.coupon-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1rpx solid #f0f0f0;
}

.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.coupon-desc {
  font-size: 24rpx;
  color: #999;
}

/* 通知中心弹窗 */
.notification-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notification-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.notification-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.notification-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.notification-list {
  flex: 1;
  max-height: 60vh;
  padding: 24rpx;
}

.notification-item {
  margin-bottom: 24rpx;
}

.notification-item:last-child {
  margin-bottom: 0;
}

.coupon-right {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  margin-right:24rpx;
}

.receive-btn {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background: #fff5f0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #FF6B35;
}

.receive-btn.received {
  background: #f5f5f5;
  border-color: #e0e0e0;
}

.receive-text {
  font-size: 24rpx;
  color: #FF6B35;
}

.receive-btn.received .receive-text {
  color: #999;
}