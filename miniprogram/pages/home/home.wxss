.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 导航栏 */
.navbar {
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.logo {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.navbar-right {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.cart-icon-wrapper {
  position: relative;
}

/* 门店信息横幅 */
.store-banner {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  padding: 48rpx 32rpx;
  color: #fff;
}

.store-info {
  width: 100%;
}

.store-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.store-name-wrapper {
  flex: 1;
}

.store-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.store-address {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.store-meta {
  display: flex;
  align-items: center;
  gap: 48rpx;
  font-size: 28rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 区块 */
.section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #FF6B35;
}

/* 今日推荐 */
.recommend-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recommend-image-wrapper {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.recommend-image {
  width: 100%;
  height: 100%;
  height: 384rpx;
  background: linear-gradient(135deg, #FED7AA 0%, #FB923C 100%);
  position: relative;
}

.recommend-content {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  color: #fff;
}

.recommend-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.recommend-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.recommend-price {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-current {
  font-size: 48rpx;
  font-weight: bold;
}

.price-old {
  font-size: 28rpx;
  opacity: 0.7;
  text-decoration: line-through;
}

/* 商品卡片 */
.product-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 8rpx;
}

.product-image-wrapper {
  position: relative;
  height: 256rpx;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.favorite-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-info {
  padding: 24rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.product-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  background: #FF6B35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 优惠活动 */
.promotion-card {
  background: linear-gradient(135deg, #EC4899 0%, #EF4444 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}

.promotion-content {
  flex: 1;
}

.promotion-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.promotion-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}
