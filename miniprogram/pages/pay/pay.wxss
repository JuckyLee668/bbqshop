.pay-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 地址选择卡片 */
.address-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.address-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address-content {
  flex: 1;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.address-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.address-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.address-placeholder {
  font-size: 28rpx;
  color: #999;
  padding: 16rpx 0;
}

.pay-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.pay-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.pay-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pay-amount .label {
  font-size: 28rpx;
  color: #666;
}

.pay-amount .price {
  font-size: 40rpx;
  font-weight: 700;
  color: #ff6b35;
}

.pay-details {
  margin: 24rpx 0;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.detail-value.free {
  color: #52c41a;
}

.pay-info {
  margin-top: 8rpx;
}

.info-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.pay-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.pay-footer t-button {
  width: 100%;
}

