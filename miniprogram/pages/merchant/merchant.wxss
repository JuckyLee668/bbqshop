.merchant-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.merchant-header {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.merchant-scroll {
  flex: 1;
  height: calc(100vh - 100rpx);
}

/* 数据统计 */
.stats-section {
  padding: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-card {
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
}

.stat-card.orange {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
}

.stat-card.blue {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

.stat-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-trend {
  display: block;
  font-size: 24rpx;
  opacity: 0.75;
}

/* 快捷操作 */
.quick-actions {
  padding: 0 32rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon.orange {
  background: #FFF5F0;
}

.action-icon.blue {
  background: #E6F7FF;
}

.action-icon.green {
  background: #F6FFED;
}

.action-icon.purple {
  background: #F9F0FF;
}

.action-label {
  font-size: 24rpx;
  color: #666;
}

/* 新订单提醒 */
.new-order-alert {
  background: #FFF1F0;
  border: 1rpx solid #FFCCC7;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 32rpx 32rpx;
}

.alert-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.alert-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #cf1322;
}

.alert-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.alert-desc {
  display: block;
  font-size: 28rpx;
  color: #cf1322;
  margin-bottom: 24rpx;
}

/* 订单管理 */
.order-management {
  padding: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-more {
  font-size: 28rpx;
  color: #FF6B35;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 24rpx;
  color: #999;
}

.order-product {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-info {
  font-size: 28rpx;
  color: #666;
}

.order-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

/* 商品管理 */
.product-management {
  padding: 0 32rpx 32rpx;
}

.add-product-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #FF6B35;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.product-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.product-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

.product-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B35;
}

.product-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-btn {
  font-size: 28rpx;
  color: #1890ff;
}

.action-btn.danger {
  color: #ff4d4f;
}

/* 门店管理 */
.store-management {
  padding: 0 32rpx 32rpx;
}

.edit-store-btn {
  margin-top: 24rpx;
}
